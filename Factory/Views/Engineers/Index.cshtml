@using Factory.Models

<h1> Engineers </h1>

@if (Model.Count == 0)
{
  <h3><em> No engineers found </em></h3>
}

@foreach (Engineer engineer in Model)
{
  <li>@Html.ActionLink($"{engineer.EngineerName}", "Details", new { id = engineer.EngineerId })</li>
}

<button>@Html.ActionLink("Add a new Engineer", "Create")</button>
<button>@Html.ActionLink("Home", "Index", "Home")</button>

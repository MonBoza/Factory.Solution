@using Factory.Models

<h1> Machines </h1>

@if (Model.Count == 0)
{
  <h3><em> No machines found </em></h3>
}

  @foreach(Machine machine in Model)
  {
    <li>@Html.ActionLink($"{machine.MachineName}", "Details", new { id = machine.MachineId })</li>
  }
  
  <button>@Html.ActionLink("Add a new machine", "Create")</button>
  <button>@Html.ActionLink("Home", "Index", "Home")</button>

